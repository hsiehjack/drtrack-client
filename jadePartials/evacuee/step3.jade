ion-view
  ion-header-bar.bar-positive(align-title='center')
    .buttons
      a.button(href='#/tab/evacuee/step2') Back
    .title Evacuee
    .buttons
      a.button(href='#/tab/evacuee/step4') Next
  ion-content
    .list
      .item.item-divider Military Satus
      ion-radio(value='No DoD Afflicate', ng-model='evacuee.militaryAfflicated', name='militaryAfflicated') No DoD Afflicate
      ion-radio(value='Army', ng-model='evacuee.militaryAfflicated', name='militaryAfflicated') Army
      ion-radio(value='Navy', ng-model='evacuee.militaryAfflicated', name='militaryAfflicated') Navy
      ion-radio(value='Air Force', ng-model='evacuee.militaryAfflicated', name='militaryAfflicated') Air Force
      ion-radio(value='DoD Civilian', ng-model='evacuee.militaryAfflicated', name='militaryAfflicated') DoD Civilian
      .item.item-divider Bracelet
      .item.item-input-inset
        label.item-input-wrapper
          input(type='text', placeholder='QR / Code39', ng-model='evacuee.code')
        code-scan(data-class='button button-calm')
