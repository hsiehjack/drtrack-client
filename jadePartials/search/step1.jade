ion-view
  ion-header-bar.bar-positive(align-title='center')
    .title Search
  ion-content
    tabset#evacueeID
      tab(heading='PP')
        .list
          label.item.item-input
            input(type='text', ng-model='search.passport', placeholder='Passport ID')
      tab(heading='DL')
        .list
          label.item.item-input
            input(type='text', ng-model='search.driverLic', placeholder='Driver License')
      tab(heading='SSN')
        .list
          label.item.item-input
            input(type='text', ng-model='search.ssn', placeholder='SSN #')
    .list
      .item.item-divider Evacuee Info
      label.item.item-input
        input(type='text', ng-model='search.firstName', placeholder='First Name')
      label.item.item-input
        input(type='text', ng-model='search.lastName', placeholder='Last Name')
      label.item.item-input
        span.input-label Date of Birth
        input(type='date', ng-model='search.dob')
    .row.clearBootstrap
      .col
        code-scan(data-class='button button-block button-calm clearMargin')
      .col
        a.button.button-block.clearMargin.button-assertive(on-tap='getResult()') Search
